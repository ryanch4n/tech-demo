</nav>

<div class="container">
	<div class="page-header" style="color:#3cba54">
	  <h1>Products</h1>
	</div>

	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Make</th>
	      <th>Description</th>
	      <th>Price</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @products.each do |product| %>
	      <tr>
	        <td><%= product.name %></td>
	        	<% if Brand.first != nil %>
				<td><%= Brand.find(product.brand_id).name %></td>
				<% end %>
	        <td><%= product.description %></td>
	        <td><%= product.price %></td>
	        <td><%= link_to 'Edit', edit_product_path(product) %></td>
	        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Delete product?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<button type="button" class="btn btn-default" style="margin-left:30px;">
		<%= link_to 'New Product', new_product_path %>
	</button>
</div>
<p id="notice"><%= notice %></p>
